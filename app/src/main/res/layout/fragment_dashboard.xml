<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragment.DashboardFragment"
    >


    <LinearLayout
        android:id="@+id/mainContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/normal_half_margin"
                >

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardNumberOfUsers"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:backgroundTint="@color/color_custom_white"
                    app:cardCornerRadius="@dimen/normal_half_margin"
                    android:layout_marginStart="@dimen/normal_half_margin"
                    >

                    <TextView
                    android:id="@+id/displayNumberOfUsers"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    tools:text="10"
                    android:gravity="center"
                    android:textSize="42sp"
                    android:textStyle="bold"
                    />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:text="@string/number_of_users"
                        android:gravity="center"
                        android:layout_gravity="bottom"
                        />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                android:id="@+id/cardNumberOfTechnicians"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:backgroundTint="@color/color_custom_white"
                android:layout_marginStart="@dimen/normal_margin"
                app:cardCornerRadius="@dimen/normal_half_margin"
                app:layout_constraintStart_toEndOf="@+id/cardNumberOfUsers"
                app:layout_constraintTop_toTopOf="parent"
                >

                <TextView
                    android:id="@+id/displayNumberOfTechnicians"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    tools:text="10"
                    android:gravity="center"
                    android:textSize="42sp"
                    android:textStyle="bold"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="@string/number_of_technicians"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMaxTextSize="14sp"
                    android:layout_margin="2dp"
                    android:gravity="center"
                    android:layout_gravity="bottom"
                    tools:targetApi="o" />

            </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardNumberOfBookings"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:backgroundTint="@color/color_custom_white"
                    android:layout_marginStart="@dimen/normal_margin"
                    app:cardCornerRadius="@dimen/normal_half_margin"
                    >

                    <TextView
                        android:id="@+id/displayNumberOfBookings"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        tools:text="10"
                        android:gravity="center"
                        android:textSize="42sp"
                        android:textStyle="bold"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:text="@string/number_of_bookings"
                        android:autoSizeTextType="uniform"
                        android:autoSizeMaxTextSize="14sp"
                        android:layout_margin="2dp"
                        android:gravity="center"
                        android:layout_gravity="bottom"
                        tools:targetApi="o" />

                </androidx.cardview.widget.CardView>



            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/normal_half_margin"
                android:padding="@dimen/normal_half_margin"
                >

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardNumberOfPersonalServices"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:backgroundTint="@color/color_custom_white"
                    android:layout_marginStart="@dimen/normal_half_margin"
                    app:cardCornerRadius="@dimen/normal_half_margin"
                    >

                    <TextView
                        android:id="@+id/displayNumberOfPersonalServices"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        tools:text="10"
                        android:gravity="center"
                        android:textSize="42sp"
                        android:textStyle="bold"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:text="@string/number_of_personal_services"
                        android:autoSizeTextType="uniform"
                        android:autoSizeMaxTextSize="14sp"
                        android:layout_margin="2dp"
                        android:gravity="center"
                        android:layout_gravity="bottom"
                        tools:targetApi="o" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardNumberOfHomeServices"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:backgroundTint="@color/color_custom_white"
                    app:cardCornerRadius="@dimen/normal_half_margin"
                    android:layout_marginStart="@dimen/normal_margin"
                    >

                    <TextView
                        android:id="@+id/displayNumberOfHomeServices"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        tools:text="10"
                        android:gravity="center"
                        android:textSize="42sp"
                        android:textStyle="bold"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:text="@string/number_of_home_services"
                        android:autoSizeTextType="uniform"
                        android:autoSizeMaxTextSize="14sp"
                        android:layout_margin="2dp"
                        android:gravity="center"
                        android:layout_gravity="bottom"
                        tools:targetApi="o" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardNumberOfRepairAppliances"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:backgroundTint="@color/color_custom_white"
                    app:cardCornerRadius="@dimen/normal_half_margin"
                    android:layout_marginStart="@dimen/normal_margin"
                    >

                    <TextView
                        android:id="@+id/displayNumberOfRepairAppliances"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        tools:text="10"
                        android:gravity="center"
                        android:textSize="42sp"
                        android:textStyle="bold"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:text="@string/number_of_repair_appliances"
                        android:autoSizeTextType="uniform"
                        android:autoSizeMaxTextSize="14sp"
                        android:layout_margin="2dp"
                        android:gravity="center"
                        android:layout_gravity="bottom"
                        tools:targetApi="o" />

                </androidx.cardview.widget.CardView>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/normal_half_margin"
                android:padding="@dimen/normal_half_margin"
                >

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardReport"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:backgroundTint="@color/color_custom_white"
                    android:layout_marginStart="@dimen/normal_half_margin"
                    app:cardCornerRadius="@dimen/normal_half_margin"
                    >

                    <ImageView

                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:src="@drawable/ic_report"
                        android:layout_marginTop="@dimen/normal_half_margin"
                        android:contentDescription="@string/todo" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:text="@string/report"
                        android:autoSizeTextType="uniform"
                        android:autoSizeMaxTextSize="14sp"
                        android:layout_margin="2dp"
                        android:gravity="center"
                        android:layout_gravity="bottom"
                        tools:targetApi="o" />

                </androidx.cardview.widget.CardView>




            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/normal_half_margin"
            android:padding="@dimen/normal_half_margin"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/displayNumberOfRegistration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/new_registration"
                android:textSize="16sp"
                />

            <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView_new_users"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/normal_margin"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:listitem="@layout/card_new_technician"
                />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>